datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  name     String
  tel      String
  bookings Booking[]
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  startDate DateTime
  endDate   DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String   @db.ObjectId
}

model Company {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  address     Address
  website     String
  description String
  tel         String
  Booking     Booking[]
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
